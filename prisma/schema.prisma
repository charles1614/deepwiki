generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Increase connection pool for parallel E2E tests
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wikis      Wiki[]
  versions   WikiVersion[]

  @@map("users")
}

model Wiki {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  ownerId     String

  owner      User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  files       WikiFile[]

  @@map("wikis")
}

model WikiFile {
  id          String   @id @default(cuid())
  wikiId      String
  filename    String
  originalName String
  size        Int
  url         String
  uploadedAt  DateTime @default(now())
  updatedAt   DateTime @updatedAt

  wiki        Wiki     @relation(fields: [wikiId], references: [id], onDelete: Cascade)
  versions    WikiVersion[]

  @@map("wiki_files")
  @@index([wikiId])
  @@index([filename])
}

model WikiVersion {
  id              String   @id @default(cuid())
  fileId          String
  versionNumber    Int
  content          String
  changeType       String   // CREATE, UPDATE, DELETE
  changeDescription String?
  authorId         String
  contentSize      Int
  checksum         String
  createdAt        DateTime @default(now())

  file             WikiFile @relation(fields: [fileId], references: [id], onDelete: Cascade)
  author           User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@unique([fileId, versionNumber])
  @@map("wiki_versions")
  @@index([fileId])
  @@index([authorId])
}

enum Role {
  USER
  ADMIN
}

model SystemSetting {
  key         String   @id
  value       String
  description String?
  updatedAt   DateTime @updatedAt

  @@map("system_settings")
}
