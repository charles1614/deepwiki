# Environment variables for DeepWiki
# Copy this file to .env.local and fill in your values

# Database (PostgreSQL for all environments)
DATABASE_URL="postgresql://deepwiki:devpassword@localhost:5432/deepwiki"
# For production: DATABASE_URL="postgresql://deepwiki:secure_password@postgres:5432/deepwiki"

# NextAuth.js v5 Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# Email Configuration (for password reset)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@deepwiki.com"

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Development
NODE_ENV="development"