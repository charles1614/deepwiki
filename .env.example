# Environment variables for DeepWiki
# Copy this file to .env.local and fill in your values

# Database connection - USE POOLED CONNECTION for app/tests
# Format: postgresql://user:pass@ep-xxx-pooler.region.aws.neon.tech/dbname
# Note: Add -pooler to endpoint ID for connection pooling (recommended)
DATABASE_URL="postgresql://user:password@localhost:5432/mydb"

# Optional: Direct connection for migrations only (without -pooler)
# DATABASE_URL_DIRECT="postgresql://user:pass@ep-xxx.region.aws.neon.tech/dbname"

# NextAuth.js v5 Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# Email Configuration (for password reset)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@deepwiki.com"

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Development
NODE_ENV="development"

# SSH Proxy Security
# Token for WebSocket authentication (must match in frontend and proxy container)
NEXT_PUBLIC_PROXY_AUTH_TOKEN="your-secure-token-here"
# Root password for SSH access to the container
SSH_ROOT_PASSWORD="your-secure-root-password"